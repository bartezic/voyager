- content_for :page_head do
  .flex.justify-between.items-center
    %h1.font-bold.text-4xl Admin Roles
    = link_to "New role", new_admin_role_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium"

.w-full
  - if notice.present?
    %p#notice.py-2.px-3.bg-green-50.mb-5.text-green-500.font-medium.rounded-lg.inline-block= notice
  #admin_roles.min-w-full
    = render @roles
