.fields
  .flex.my-5
    .col
      = f.label :user_id
      = f.collection_select(:user_id, User.all, :id, :full_name, {prompt: "Choose an User"}, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full")
    .col
      = f.label :role_id
      = f.collection_select(:role_id, Role.all, :id, :name, {prompt: "Choose an Role"}, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full")
    .col
      = link_to "Remove", '#', class: "remove_fields"