%div{:id => "#{dom_id user}"}
  %p.my-5
    %strong.block.font-medium.mb-1 First name:
    = user.first_name
  %p.my-5
    %strong.block.font-medium.mb-1 Last name:
    = user.last_name
  %p.my-5
    %strong.block.font-medium.mb-1 Username:
    = user.username
  %p.my-5
    %strong.block.font-medium.mb-1 Email:
    = user.email

  - if action_name != "show"
    = link_to "Show this user", [:admin, user], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    = link_to "Edit this user", edit_admin_user_path(user), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"
    %hr.mt-6/
